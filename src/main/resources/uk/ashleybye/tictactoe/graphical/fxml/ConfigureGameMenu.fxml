<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="uk.ashleybye.tictactoe.graphical.controller.ConfigureGameMenuController"
  prefHeight="400.0" prefWidth="120.0">
  <children>
    <Label fx:id="title"
      text="Configure Game"
      minWidth="120"
      minHeight="40"/>
  </children>
  <children>
    <Label text="Player 1"
      minWidth="120"
      minHeight="40"/>
  </children>
  <children>
    <TextField fx:id="playerOneName"
      minWidth="120"
      minHeight="40"/>
  </children>
  <children>
    <TextField fx:id="playerOneMark"
      minWidth="120"
      minHeight="40"/>
  </children>
  <children>
    <ComboBox fx:id="playerOneType"
      minWidth="120"
      minHeight="40"/>
  </children>
  <children>
    <Label text="Player 2"
      minWidth="120"
      minHeight="40"/>
  </children>
  <children>
    <TextField fx:id="playerTwoName"
      minWidth="120"
      minHeight="40"/>
  </children>
  <children>
    <TextField fx:id="playerTwoMark"
      minWidth="120"
      minHeight="40"/>
  </children>
  <children>
    <ComboBox fx:id="playerTwoType"
      minWidth="120"
      minHeight="40"/>
  </children>
  <children>
    <Button fx:id="mainMenu"
      text="Main Menu"
      minWidth="120"
      minHeight="40"/>
  </children>
</VBox>
